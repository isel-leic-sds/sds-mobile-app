<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <TextView
            android:text="@string/question1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/question1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <RadioGroup
            android:layout_width="406dp"
            android:layout_height="75dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/question1"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.486" android:id="@+id/radioGroup">
        <RadioButton
                android:text="@string/yesButton"
                android:layout_width="77dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/noButton"
                android:layout_width="76dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="@string/question2"
            android:layout_width="397dp"
            android:layout_height="39dp"
            android:id="@+id/question2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="492dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.47" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/question2" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/question3"
            android:layout_width="398dp"
            android:layout_height="38dp"
            android:id="@+id/question3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="344dp" app:layout_constraintBottom_toBottomOf="parent"
    />

    <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="224dp"
            android:layout_height="307dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>